<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Button
        android:id="@+id/btnSongLiked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ai_logo"
        android:drawableTint="@color/white"
        android:gravity="left|center"
        android:text="Bài hát đã tạo từ AI"
        android:textSize="20sp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btnMyPlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_play_list"
        android:drawableTint="@color/white"
        android:gravity="left|center"
        android:text="PlayList của tôi"
        android:textSize="20sp"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".View.LoginActivity">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_ai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext_br"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnAImusic"
            style="@style/button_login_style"
            android:backgroundTint="@color/green"
            android:text="Tạo nhạc bằng AI"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>